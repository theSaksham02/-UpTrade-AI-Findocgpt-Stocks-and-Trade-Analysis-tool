# UpTrade AI Backend - Environment Configuration
# Copy this file to .env and fill in your API keys

# Application Settings
APP_NAME=UpTrade AI Backend
APP_VERSION=2.0.0
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/uptrade

# Redis Configuration
REDIS_URL=redis://localhost:6379

# News API (Get free key from https://newsapi.org)
NEWS_API_KEY=your_news_api_key_here

# Optional: Alternative Market Data APIs
# Get from https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=

# Get from https://polygon.io
POLYGON_API_KEY=

# Google AI for Q&A features
GOOGLE_API_KEY=

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501
