# UpTrade AI - Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================================================
# News API (https://newsapi.org/)
# Free tier: 100 requests/day
# ============================================================================
NEWS_API_KEY=your_news_api_key_here

# ============================================================================
# Alpha Vantage API (https://www.alphavantage.co/)
# Free tier: 5 API requests per minute, 500 requests per day
# ============================================================================
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# ============================================================================
# Finnhub API (https://finnhub.io/)
# Free tier: 60 API calls/minute
# ============================================================================
FINNHUB_KEY=your_finnhub_key_here

# ============================================================================
# Google Gemini API (Optional - for advanced Q&A)
# ============================================================================
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# Alpaca Trading API (Optional - for paper trading)
# Get keys from https://alpaca.markets/
# ============================================================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# Model Configuration
# ============================================================================
# Use CPU or GPU for inference
USE_GPU=false

# Model cache directory
MODEL_CACHE_DIR=./model_cache

# ============================================================================
# API Configuration
# ============================================================================
# API server port
API_PORT=8000

# API server host
API_HOST=0.0.0.0

# Enable debug mode
DEBUG=false

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_URL=http://localhost:8000

# ============================================================================
# Database (Optional - for caching)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/uptrade

# ============================================================================
# Redis (Optional - for rate limiting)
# ============================================================================
# REDIS_URL=redis://localhost:6379
